<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp_pc.debtapp.PasswordCreate">

    <TextView
        android:text='*if you have never had one, please, enter "0"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:id="@+id/tvCurrPass2"
        android:textSize="17sp" />

    <TextView
        android:text="Please, enter your old password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrPass"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Confirm!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bConfirmPassword"
        android:layout_below="@+id/ETNewPass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#3f51b5"
        android:elevation="@android:dimen/dialog_min_width_major" />

    <TextView
        android:text="     "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOutputforPassword"
        android:layout_below="@+id/bConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/ETOldPass"
        android:textSize="30sp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/tvCurrPass2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter your new password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNewPass"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/ETOldPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/ETNewPass"
        android:background="@android:color/background_light"
        android:textSize="30sp"
        android:layout_below="@+id/tvNewPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Confirm your new password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNewPass2"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/ETNewPass2"
        android:background="@android:color/background_light"
        android:textSize="30sp"
        android:layout_below="@+id/tvNewPass2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
