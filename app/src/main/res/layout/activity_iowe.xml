<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_debtors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp_pc.debtapp.Debtors">

    <TextView
        android:text="I owe: Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSummaryIowe"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lvIowe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvSummaryIowe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="148dp" />

    <TextView
        android:text="   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOwe"
        android:textSize="24sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/tvSummaryIowe"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IBAddActIOwe"
        android:layout_toRightOf="@+id/IBAddActIOwe"
        android:layout_toEndOf="@+id/IBAddActIOwe"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/bBackIowe"
        android:layout_alignTop="@+id/IBAddActIOwe" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/IBAddActIOwe"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/tvOwe"
        android:layout_toLeftOf="@+id/tvOwe"
        android:layout_toStartOf="@+id/tvOwe" />

</RelativeLayout>
